{% extends 'backoffice.html.twig' %}

 {% block stylesheet %}
     {{ parent() }}
     <link rel="stylesheet" href="{{ asset('css/select2.css') }}">
 {% endblock %}

{% block body %}
   <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! üè∑Ô∏è</h1>
    <p>Nombre de produit dans la table: {{ products | length }}</p>
    <div>
        <div>
            {{ form(form) }}
        </div>
        {% if products | length > 0 %}
        <div>
        <table class="table table-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Produits</th>
            <th scope="col">Prix</th>
            <th scope="col">Description</th>
            <th scope="col">Cat√©gorie</th>
            <th scope="col">Tags</th>
            <th scope="col">Modifier / Supprimer</th>
        </tr>
        {% for product in products %}
        <tr>
            <th scope="row">{{ product.id }}</th>
            <td>{{ product.title }}</td>
            <td>{{ product.price }}</td>
            <td>{{ product.description }}</td>
            <td>{{ product.category.title }}</td>
            <td>
            {% for tag in product.tags %}
                {{tag.title}}
            {% endfor %}
            </td>
            <td>
                <a href="{{url('admin_product_update', {'id': product.id})}}" class="btn btn-warning">Modifier</a>
                <a href="{{url('admin_product_delete', {'id': product.id})}}" class="btn btn-danger" onclick= "return confirm('Vous √™tes s√ªr de vouloir supprimer?')">Supprimer</a>
            </td>
        </tr>
        {% endfor %}
        </table>
        </div>
        {% else %}
        <p>Aucun produit pour l'instant</p>
        {% endif %}
    </div>


</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
<script src="{{ asset('js/jquery.min.js') }}"></script>
<script src="{{ asset('js/select2.js') }}"></script>
<script>
    $(function(){
        $('.select2').select2()

    })
</script>
{% endblock %}


