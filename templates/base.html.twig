<div class="container mt-4">
    <div class="w-50 mx-auto">
    {% for label, msgs in app.flashes %}
        {% for msg in msgs %}
            <div class="alert alert-{{ label }} text-center">
                {{ msg }}
            </div>

        {% endfor %}
    {% endfor %}
    </div>

        {% block body %}{% endblock %}
</div>
